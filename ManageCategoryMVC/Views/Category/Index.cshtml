@model IEnumerable<ManageCategoryMVC.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOder)
            </td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary mx-2">Edit</a> |
                <a asp-controller="Category" asp-action="Details" asp-route-id="@item.id" class="btn btn-info mx-2">Details</a> |
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
